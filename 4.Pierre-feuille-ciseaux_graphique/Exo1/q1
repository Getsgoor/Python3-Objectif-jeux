#fenetre tkinter d'un bouton incrémenteur

from tkinter import *

def incrementer():
    global compteur
    compteur += 1
    compte.configure(text = str(compteur))
    
def reinit():
    global compteur
    compteur = 0
    compte.configure(text = str(compteur))

compteur = 0

fenetre = Tk()
fenetre.title("Bouton incrémenteur")

compte = Label(fenetre, text = "0", font = ("Helvetica", 48))
compte.grid(row = 0, column = 1)

#Boutons
bouton1 = Button(fenetre, text = "Incrémenter", command = incrementer)
bouton1.grid(row = 1, column = 0, padx = 10, sticky = W)

bouton2 = Button(fenetre, text= "Recommencer", command = reinit)
bouton2.grid(row = 1, column = 1, padx = 10)

bouton3 = Button(fenetre, text = "Quitter", command = fenetre.destroy)
bouton3.grid(row = 1, column = 2, padx = 10, pady =5, sticky = E)
fenetre.mainloop()